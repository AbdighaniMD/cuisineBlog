<% if(recipes != null ) { %>
<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Submit Your Recipe</h1>
    <div class="col-lg-6 mx-auto">
      <p class="lead">Share your amazing recipies with thousands of web developers accross the world.</p>
    </div>
  </div>
  
  <div class="row justify-content-center">
  
    <% if(infoSubmitObj != '') { %>
      <div class="col-8 alert alert-success" role="alert">
        <%= infoSubmitObj %>
      </div>
    <% } %>
  
    <% if(infoErrorsObj != '') { %>
      <div class="col-8 alert alert-danger" role="alert">
        <%= infoErrorsObj[0].message %>
      </div>
    <% } %>
  

    <div class="col-8">
  
      <form action="/api/v1/blog/edit-submit-recipe/<%=recipes._id%>?_method=PUT" enctype="multipart/form-data" method="POST">
 
        <div class="row g-3">
  
          <div class="col-12">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" id="email" value="<%- recipes.email %>" class="form-control">
          </div>
  
          <div class="col-12">
            <label for="name" class="form-label">Recipe Name</label>
            <input type="text" name="name" id="name" value="<%- recipes.name %>" class="form-control" required>
          </div>
          
          <div class="col-12">
            <label for="description" class="form-label">Description</label>
            <textarea name="description" id="description" class="form-control" cols="30" rows="4"><%- recipes.description %>
            </textarea>
          </div>

          <div class="col-12">
          
            
          </div>

          <div class="col-12">
            <label for="name" class="form-label">Ingredients</label><br>
            <small>Example: Water</small>
            <% recipes.ingredients.forEach((ingredients) => { %>
              <input type="text" name="ingredients" value="<%= ingredients %>" class="form-control">
            <% }) %>
            <br/>
            <div class="ingredientList">
              <div class="ingredeintDiv mb-1">
                <input type="text" name="ingredients" class="form-control">
              </div>
            </div>
          </div>

          <div class="col-12">
            <button type="button" class="btn btn-outline-primary" id="addIngredientsBtn">+ Ingredients</button>
          </div>
  
          <div class="col-12">
            <label for="category">Select Category</label>
            <select class="form-select form-control" name="category" aria-label="Category">
              <option selected><%- recipes.category %> </option>
              <option value="Thai">Thai</option>
              <option value="American">American</option>
              <option value="Chinese">Chinese</option>
              <option value="Mexican">Mexican</option>
              <option value="Indian">Indian</option>
            </select>
          </div>
  
          <div class="col-12">
            <label for="image">Product Image</label>
            <input type="file" class="form-control" name="image" accept="image/*">
          </div>
  
          <div class="col-12">
            <button type="submit" class="btn btn-primary">Submit Recipe</button>
          </div>
  
        </div>

      </form>
  
    </div>
</div>

<% } else { %>
    <p>No item found.</p>
<% } %>