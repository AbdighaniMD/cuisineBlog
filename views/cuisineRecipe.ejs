<% if(recipe != null ) { %>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/api/v1/blog">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page"><%- recipe.name %></li>
  </ol>
</nav>
    
<div class="row">
  <div class="col-12 col-md-4">
    <img src="/uploads/<%- recipe.image %>" class="img-fluid sticky-top" style="top: 20px;" alt="<%- recipe.name %>" loading="lazy">
  </div>
  <div class="col-12 col-md-8">
    <div class="row">
      <div class="col-12"><h1><%- recipe.name %></h1></div>
      <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%- recipe.category %></div>
      <div class="col-12" style="white-space: pre-line;">
        <h4>Cooking Instructions:</h4>
        <%- recipe.description %>
      </div>
  </div>
  <div class="row pt-4">
    <div class="col-12">
      <h4>Ingredients</h4>
      <ul class="list-group list-group-flush">
        <% recipe.ingredients.forEach((ingredients) => { %>
          <li class="list-group-item"><%= ingredients %></li>
        <% }) %>
            </ul> 
    </div>
  </div>

</div>
  <div class="mt-3 "> 
    <a href="/api/v1/blog/edit-submit-recipe/<%=recipe._id%>" type="button" class="px btn btn-light btn-small"><i class="bi bi-pencil"></i>Edit</a>
    <form action="/api/v1/blog/recipe/<%= recipe._id %>?_method=DELETE" method="POST" class="d-inline">
       <button type="submit" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</button>
    </form>
  </div>
</div>

  <% } else { %>
    <p>No item found.</p>
<% } %>


<br/>
<br/>
