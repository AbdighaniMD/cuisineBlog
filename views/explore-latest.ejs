<h1 class="pb-4">Explore Latest</h1>

<div class="row row-cols-2 row-cols-lg-5n">
  <% if(recipe != '') { %>
    <% recipe.forEach((recipe) => { %>
    <a href="/api/v1/blog/recipe/<%= recipe._id %>" class="col text-center category__link">
      <div class="category__img category__img--large shadow">
        <img src="/uploads/<%= recipe.image %>" alt="<%= recipe.name %>" loading="lazy">
      </div>
      <div class="pt-1"><%= recipe.name %></div>
    </a>
    <% }) %>
  <% } else { %>
    <p>No items found.</p>
  <% } %>
</div>